{
  "name": "@htmlacademy/editorconfig-cli",
  "version": "1.0.0",
  "description": "Command line interface for project files with .editorconfig",
  "type": "module",
  "exports": "./index.js",
  "bin": {
    "editorconfig-cli": "./index.js"
  },
  "files": [
    "./index.js"
  ],
  "scripts": {
    "lint": "eslint index.js",
    "test": "node ./index.js",
    "pretest": "npm run lint",
		"preversion": "npm run lint",
		"postversion": "npm publish",
		"postpublish": "git push origin --all; git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:htmlacademy/editorconfig-cli.git"
  },
  "keywords": [
    "editorconfig",
    "cli",
    "validate",
    "check"
  ],
  "author": "zeckson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/htmlacademy/editorconfig-cli/issues"
  },
  "homepage": "https://github.com/htmlacademy/editorconfig-cli#readme",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "colors": "1.4.0",
    "commander": "10.0.1",
    "glob": "10.2.2",
    "lintspaces": "0.10.3"
  },
  "devDependencies": {
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.0.0"
  },
  "editorconfig-cli": [
    "*.html",
    "*.json",
    "img/**/*.svg",
    "js/**/*.js",
    "test/**/*.*",
    "less/**/*.less",
    "sass/**/*.{sass,scss}",
    "postcss/**/*.{css,pcss}"
  ]
}
